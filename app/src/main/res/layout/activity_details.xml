<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.hesham.moves.Details">
    <ImageView
        android:id="@+id/ImageOfResutl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBlackTrans"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/TitleTex"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center|center_vertical"
                android:text="MOvies name "
                android:layout_margin="6dp"
                android:padding="6dp"
                android:textColor="#aea2a2"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/HistroyTitile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center|center_vertical"
                    android:layout_margin="6dp"
                    android:padding="6dp"
                    android:text="2015"
                    android:textColor="#aea2a2" />
                <TextView
                    android:id="@+id/Rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center|center_vertical"
                    android:layout_margin="6dp"
                    android:padding="6dp"
                    android:text="8.1/10"
                    android:textColor="#aea2a2" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#009688"
                    android:onClick="OnFavourit"
                    android:layout_gravity="center_horizontal|center|center_vertical"
                    android:layout_margin="6dp"
                    android:padding="6dp"
                    android:text="MARKS AS FAVORIITE"
                    android:textColor="#fff"
                    android:textSize="8dp" />
            </LinearLayout>

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Descriptiom"
                    android:textColor="#aea2a2"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/Desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="vertical"
                    android:layout_margin="6dp"
                    android:padding="6dp"
                    android:textColor="#aea2a2" />


            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</FrameLayout>
