<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlackTrans"
    android:orientation="vertical"
    tools:context="com.example.hesham.moves.Details">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/TitleTex"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center|center_vertical"
                android:layout_margin="6dp"
                android:padding="6dp"
                android:text="MOvies name "
                android:textColor="@color/TextColor"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/ImageOfResutl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitXY" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/HistroyTitile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center|center_vertical"
                    android:layout_margin="6dp"
                    android:padding="6dp"
                    android:text="2015"
                    android:textColor="@color/TextColor" />

                <TextView
                    android:id="@+id/Rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal|center|center_vertical"
                    android:layout_margin="6dp"
                    android:padding="6dp"
                    android:text="8.1/10"
                    android:textColor="@color/TextColor" />

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Descriptiom"
                android:textColor="@color/TextColor"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/Desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="6dp"
                android:padding="6dp"
                android:scrollbars="vertical"
                android:textColor="@color/TextColor" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center|center_vertical"
            android:layout_margin="6dp"
            android:background="@drawable/background"
            android:gravity="center"
            android:onClick="OnFavorite"
            android:padding="10dp"
            android:text="Favourit"
            android:textColor="#fff"
            android:textSize="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center|center_vertical"
            android:layout_margin="6dp"
            android:background="@drawable/background"
            android:gravity="center"
            android:onClick="ONTrial"
            android:padding="10dp"
            android:text="Trials"
            android:textColor="#fff"
            android:textSize="16dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|center|center_vertical"
            android:layout_margin="6dp"
            android:background="@drawable/background"
            android:gravity="center"
            android:onClick="OnReviews"
            android:padding="10dp"
            android:text=" Reviews "
            android:textColor="#fff"
            android:textSize="16dp" />

    </LinearLayout>
</FrameLayout>
