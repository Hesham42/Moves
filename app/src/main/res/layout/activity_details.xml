<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlackTrans"
    android:orientation="vertical"
    tools:context="com.example.hesham.moves.Details">

    <ScrollView
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ImageOfResutl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:scaleType="centerCrop" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/TitleTex"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|center|center_vertical"
                        android:text="MOvies name "
                        android:textColor="@color/TextColor"
                        android:textSize="@dimen/Titile" />

                    <TextView
                        android:id="@+id/HistroyTitile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|center|center_vertical"
                        android:layout_margin="@dimen/sixdp"
                        android:padding="@dimen/sixdp"
                        android:text="2015"
                        android:textColor="@color/TextColor" />

                    <TextView
                        android:id="@+id/Rate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|center|center_vertical"
                        android:layout_margin="@dimen/sixdp"
                        android:padding="@dimen/sixdp"
                        android:text="8.1/10"
                        android:textColor="@color/TextColor" />

                </LinearLayout>

            </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/tendp"
                android:orientation="vertical"
                android:padding="@dimen/tendp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Descriptiom"
                    android:textColor="@color/TextColor"
                    android:textSize="@dimen/Titile" />

                <TextView
                    android:id="@+id/Desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/sixdp"
                    android:padding="@dimen/sixdp"
                    android:scrollbars="vertical"
                    android:textColor="@color/TextColor" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center|center_vertical"
                android:layout_margin="@dimen/sixdp"
                android:background="@drawable/background"
                android:gravity="center"
                android:onClick="OnFavorite"
                android:padding="@dimen/Titile"
                android:text="Favourit"
                android:textColor="#fff"
                android:textSize="@dimen/Titile" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center|center_vertical"
                android:layout_margin="@dimen/sixdp"
                android:background="@drawable/background"
                android:gravity="center"
                android:onClick="ONTrial"
                android:padding="@dimen/tendp"
                android:text="Trials"
                android:textColor="#fff"
                android:textSize="@dimen/Titile" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center|center_vertical"
                android:layout_margin="@dimen/sixdp"
                android:background="@drawable/background"
                android:gravity="center"
                android:onClick="OnReviews"
                android:padding="@dimen/tendp"
                android:text=" Reviews "
                android:textColor="#fff"
                android:textSize="@dimen/Titile" />

        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>
