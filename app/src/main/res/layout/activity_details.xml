<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.hesham.moves.Details">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="#009688">

            <TextView
                android:id="@+id/TitleTex"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="14dp"
                android:padding="14dp"
                android:text="Chapping"
                android:textSize="20dp"
                android:textColor="#fff"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/ImageOfResutl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/e"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/HistroyTitile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2015"
                    android:layout_gravity="center_horizontal|center|center_vertical"
                    android:padding="10dp"
                    />
                <TextView
                    android:id="@+id/Houre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="120min"
                    android:layout_gravity="center_horizontal|center|center_vertical"
                    android:padding="10dp"
                    />
                <TextView
                    android:id="@+id/Favourit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="8.1/10"
                    android:layout_gravity="center_horizontal|center|center_vertical"
                    android:padding="10dp"
                    />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#009688"
                    android:text="MARKS AS FAVORIITE"
                    android:textColor="#fff"
                    android:padding="10dp"
                    android:layout_margin="10dp"
                    android:textSize="8dp"
                    android:onClick="OnFavourit"/>
            </LinearLayout>

        </LinearLayout>
        <TextView
            android:id="@+id/Desc"
            android:text="A live-action adaptation of Disney's version of the classic 'Beauty and the Beast' tale of a cursed prince and a beautiful young woman who helps him break the spell"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <view
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="#9c9c9c"
            />

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            />

    </LinearLayout>
</FrameLayout>
