<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.hesham.moves.Details">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="?attr/colorPrimary"
        android:elevation="6dp"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#009688">

            <TextView
                android:id="@+id/TitleTex"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="14dp"
                android:padding="14dp"
                android:text=""
                android:textSize="20dp"
                android:textColor="#fff"/>
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/ImageOfResutl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/HistroyTitile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2015"
                android:layout_gravity="center_horizontal|center|center_vertical"
                android:padding="10dp"
                />
            <TextView
                android:id="@+id/Houre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="120min"
                android:layout_gravity="center_horizontal|center|center_vertical"
                android:padding="10dp"
                />
            <TextView
                android:id="@+id/Rate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8.1/10"
                android:layout_gravity="center_horizontal|center|center_vertical"
                android:padding="10dp"
                />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#009688"
                android:text="MARKS AS FAVORIITE"
                android:textColor="#fff"
                android:padding="10dp"
                android:layout_margin="10dp"
                android:textSize="8dp"
                android:onClick="OnFavourit"/>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Descriptiom"
            android:textSize="18dp"
            />
        <TextView
            android:id="@+id/Desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reviewer"
            android:textSize="18dp"
            />
        <TextView
            android:id="@+id/Reveo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
<View
    android:layout_width="match_parent"
    android:layout_height="4dp"
    android:background="#919191"/>
<android.support.v7.widget.RecyclerView
    android:id="@+id/DetailsRec"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"/>
</LinearLayout>
